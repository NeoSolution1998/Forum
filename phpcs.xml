<?xml version="1.0"?>
<ruleset name="Custom Coding Standard">
    <description>Мой собственный стандарт кодирования.</description>
    
    <!-- Определяем стандарт, который вы хотите использовать -->
    <rule ref="PSR12"/> <!-- Используем стандарт PSR-12 для проверки стиля кода -->
    
    <!-- Добавляем дополнительные sniffs или исключаем директории при необходимости -->
    <exclude-pattern>*/vendor/*</exclude-pattern> <!-- Исключаем папку vendor из проверки кода -->
    <exclude-pattern>*/node_modules/*</exclude-pattern> <!-- Исключаем папку node_modules из проверки кода -->
    
    <!-- Указываем пути, которые нужно проверять -->
    <file>app</file> <!-- Проверяем директорию app на соответствие стандартам кода -->
    <file>routes</file> <!-- Проверяем директорию routes на соответствие стандартам кода -->
    <file>database</file> <!-- Проверяем директорию database на соответствие стандартам кода -->
</ruleset>
